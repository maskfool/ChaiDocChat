# Production Environment Configuration Template
# Copy this file to .env and update the values

# Application
NODE_ENV=production
PORT=5001

# Database Configuration
MONGODB_URI=mongodb://admin:your_mongodb_password@mongodb:27017/chaidocchat?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password
MONGO_APP_PASSWORD=your_app_mongodb_password

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key

# Qdrant Vector Database
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=chaidocchat-collection

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Security Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info

# Embedding Configuration
EMBEDDING_DIM=1536
RAG_TOP_K=5
